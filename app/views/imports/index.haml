%h2="#{Import.model_name.human(:count=>5)} (#{@imports.length})"

%p= link_to t(:'imports.new'), new_import_path

%table
  %thead
    %tr
      %th= t(:'link.actions')
      %th= Import.human_attribute_name(:name)
      %th= Import.human_attribute_name(:kind)
      %th= Import.human_attribute_name(:created_at)
  %tbody
    - @imports.each do |obj|
      %tr
        %td
          = link_to( t('link.show'), obj )
          =# link_to( t('link.destroy'), obj ,:remote => true,  :confirm => t(:'link.confirm_destroy'), :method => :delete )
        %td=obj.name
        %td=obj.kind
        %td=obj.created_at



-# table_for(@imports, :sorting => false) do |t, obj|

  = t.column :name, :link => import_path(obj)
  = t.column :kind
  = t.column :started_at
  = t.column :created_at